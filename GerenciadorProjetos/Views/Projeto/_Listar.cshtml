@model List<GerenciadorProjetos.ViewModels.ProjetoViewModel>

<table class="table table-striped table-hover table-row-pointer" id="tabela">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data de Entrega</th>
            <th>Criador</th>
            <th>Tipo</th>
            <th data-orderable="false"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (GerenciadorProjetos.ViewModels.ProjetoViewModel projeto in Model)
            {
                <tr>
                    <td>@projeto.Nome</td>
                    <td>@projeto.Descricao</td>
                    <td>@projeto.DataEntrega.ToString("dd/MM/yyyy")</td>
                    <td>@projeto.NomeCriadorProjeto</td>
                    <td>@projeto.DescricaoTipoProjeto</td>
                    <td class="col-min">
                        <button class="btn btn-outline btn-primary" onclick="editar(@projeto.Codigo)" title="Editar"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-outline btn-danger" onclick="excluir(@projeto.Codigo, this)" title="Excluir"><i class="fa fa-times"></i></button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
